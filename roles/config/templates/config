# Taskd configuration
#
# See http://taskwarrior.org/docs/taskserver/configure.html
# or man taskdrc
confirmation=1
extensions={{taskd_install_dir}}/libexec/taskd
ip.log=off
log={{taskd_data_path}}/taskd.log
pid.file={{taskd_data_path}}/taskd.pid
queue.size=10
request.limit=1048576
root={{taskd_data_path}}
server={{ taskd_fqdn }}:{{ taskd_port }}
trust=strict
verbose=0

client.cert={{taskd_certs_path}}/client.cert.pem
client.key={{taskd_certs_path}}/client.key.pem
server.cert={{taskd_certs_path}}/server.cert.pem
server.key={{taskd_certs_path}}/server.key.pem
server.crl={{taskd_certs_path}}/server.crl.pem
ca.cert={{taskd_certs_path}}/ca.cert.pem
